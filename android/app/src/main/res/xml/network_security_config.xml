<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Configuration for trusted server with certificate issues -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow connections to your trusted server IP -->
        <domain includeSubdomains="false">15.207.67.98</domain>
        <trust-anchors>
            <!-- Trust system CAs -->
            <certificates src="system"/>
            <!-- Trust user-added CAs for this domain -->
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>

    <!-- Add config for image hosting domains -->
    <domain-config>
        <domain includeSubdomains="true">images.unsplash.com</domain>
        <domain includeSubdomains="true">unsplash.com</domain>
    </domain-config>

    <!-- Base configuration for all other domains -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust default system CAs -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Debug configuration: Trust user-added CAs for debugging -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>