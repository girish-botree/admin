<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow connections to your development server IP -->
        <domain includeSubdomains="false">15.207.67.98</domain>
    </domain-config>

    <!-- Add config for image hosting domains -->
    <domain-config>
        <domain includeSubdomains="true">images.unsplash.com</domain>
        <domain includeSubdomains="true">unsplash.com</domain>
    </domain-config>

    <!-- For development/testing: Allow cleartext traffic to all domains (remove in production) -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust default CAs -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Development configuration: Trust user-added CAs for debugging -->
    <debug-overrides>
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
</network-security-config>